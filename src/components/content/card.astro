---
import Link from "@/components/link.astro";

interface Props {
	href: string;
	summary: string;
	title: string;
}

const { href, summary, title } = Astro.props;
---

<article class="grid gap-y-4 rounded-b-md border-t-4 border-brand bg-white p-6 shadow">
	<h3 class="text-xl font-bold leading-tight text-brand">
		<Link href={href} tabindex={-1}>
			{title}
		</Link>
	</h3>
	<p class="text-neutral-700">{summary}</p>
	<footer>
		<Link
			aria-label={`Read more about "${title}".`}
			class="inline-flex rounded-md bg-brand px-4 py-1.5 text-sm font-semibold text-white shadow transition hover:bg-brand-intent"
			href={href}
		>
			Read more
		</Link>
	</footer>
</article>
