---
import { Image } from "astro:assets";

import { getImageImport } from "@/lib/get-image-import";

interface Props {
	image: string;
}

const { image } = Astro.props;
---

<div class="grid content-start gap-x-6 gap-y-4 xs:grid-cols-[200px_1fr]">
	<Image alt="" src={getImageImport(image)} />
	<slot />
</div>
